{
  "manifest_version": 2,
  "name": "Lorem Ipsum Populator",
  "description": "This extension populate an input with lorem ipsum content",
  "version": "0.1",
  "background": {
      "page" : "background_page.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["populate.js"]
    }
  ],
  "permissions": [
    "contextMenus"
  ]
}
